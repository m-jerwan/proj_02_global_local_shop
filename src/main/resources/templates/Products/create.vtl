<p> Edit your new product </p>


<form action="/products" method="post">


    <label for="productName"> Name:</label>
    <input class="inputbox" type="text" name="productName" required="true" id="productName">

    <label for="productWeight"> Weight:</label>
    <input class="inputbox" type="number" name="productWeight" required="true" min="0" step="0.1" id="productWeight">

    <label for="Tag"> Tag </label>
    <select id="tag" name="tag" >
        #foreach ($tag in $tags)
        <option value="$tag">$tag.getDescription()</option>
        #end
    </select>


    <label for="FoodGroupType"> Food Group Type </label>
<select id ="foodGroupType" name="foodGroupType">
    #foreach ($foodGroupType in $foodgrouptypes)
    <option value="$foodGroupType">$foodGroupType </option>
    #end
</select>


    <label for="shop"> Shop </label>
    <select id="shop" name="shop" >
        #foreach  ($shop in $shops)
        <option value="$shop.getId()">$shop.getShopName()</option>
        #end
    </select>

    <label for="farm"> Farm </label>
    <select id="farm" name="farm" >
        #foreach ($farm in $farms)
        <option value="$farm.getId()">$farm.getFarmName()</option>
        #end
    </select>


    <label for="basket" hidden> basket </label>
    <select id="basket" name="basket" hidden >
        #foreach  ($basket in $baskets)
        <option value="$basket.getId()"> $basket</option>
        #end
    </select>

    <label for="price"> Price:</label>
    <input class="inputbox" type="number" name="price" required="true" min="0" step="0.01" id="price">

    <label for="quantity"> Quantity:</label>
    <input class="inputbox" type="number" name="quantity" required="true" min="0" step="1" id="quantity">

    <input type="submit" value="Save" class="button">

</form>