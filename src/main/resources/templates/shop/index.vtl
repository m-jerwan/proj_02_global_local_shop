<div class="welcome">
    <p>Welcome $customer.getCustomerName()</p>
</div>


<div class="shopImage">
    <p>Ricardo in all his farmer glory</p>
    <p>Welcome to our shop</p>
</div>


<div class="mainshop">

    <form action="/confirmation" method="post">
        <table>
            <tr>
                <th> Name</th>
                <th> Weight</th>
                <th> GroupType</th>
                <th> Category (Tag)</th>
                <th> Price</th>
                <th> Buy</th>
            </tr>

            #foreach ($product in $allProducts)
            <tr>
                <td>$product.getProductName()</td>
                <td>$product.getWeight()</td>
                <td>$product.getGroupType().getDescription()</td>
                <td>$product.getTag().getDescription()</td>
                <td>Â£$product.getPrice()</td>

                <td>
                    <input type="checkbox" id="$product.getId()" value="$product.getId()" name="prod_$product.getId()">
                </td>
            </tr>
            #end
        </table>
        <input class="inputbox" type="text" hidden name="customerId" value="$customer.getId()" id="farmer_name">
        <input type="submit" value="Order" class="btn">

    </form>


</div>